
<% if current_user == @theuser %>	
	
	<div class= "buttons">
		<%= link_to 'post', new_post_path %>
		<%= link_to 'group', new_group_path %> 
	</div>
<% end %>
	
<div class= "profile-header">

	<h1><%= @theuser.title %></h1>
		
	<div class= "profile">
		<div class= "profile-image">
		<%= image_tag @theuser.avatar.url(:thumb) %>
		</div>
			<h2><%= @theuser.name %></h2>
					<% if @user.groups.any? %>
						<h5>@<%= @theuser.groups.first.name if @theuser.groups.any? %></h5>  
					<% end %>
		<div id="social-bar"> 
			<ul>
				<li><div id="facebook" class="icon"></div></li>
				<li><div id="twitter" class="icon"></div></li>
				<li><div id="instagram" class="icon"></div></li>
			</ul>
		</div>
	</div>
</div>

	
<% if @posts %> 
	<% @posts.reverse.each do |post| %>
		
		<div class= "posts">
			
			<div class="like">
				<p>Like</p>
			</div>
				<h3><%= post.title %><h3>
				<p><%= post.body %><p>
				<%= image_tag post.image.url(:medium) %>

	   	
		   	<div class="delete">
				<% if current_user == post.user %>
					<%= link_to 'delete', post, method: :delete, data: {remote: true, removable: true} %> 
				<% end %>
			</div>
	
		</div>
	
	<% end %>
<% end %>
			



				
			
	
	
	
